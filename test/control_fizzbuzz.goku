# FizzBuzz implementation demonstrating modulo operator and nested if statements
print "=== FizzBuzz Demo (1-15) ==="

let i = 1
while i < 16 do {
    if i % 15 == 0 then {
        print "FizzBuzz"
    } else if i % 3 == 0 then {
        print "Fizz"
    } else if i % 5 == 0 then {
        print "Buzz"
    } else {
         print i
    }
    set i = i + 1
}